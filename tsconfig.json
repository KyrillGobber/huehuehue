{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "ignoreDeprecations": "5.0",
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "resolveJsonModule": true,
        "baseUrl": ".",
        "checkJs": true,
        "isolatedModules": true,
        "strict": true
    },
    "include": [
        "src/**/*.d.ts",
        "src/**/*.ts",
        "src/**/*.js",
        "src/**/*.svelte"
    ],
    "references": [{ "path": "./tsconfig.node.json" }]
}
